import os

def sum_to_n(number):
    total = 0
    for n in  range(0, number):
        total += n
    return total
    
def get_list_csv_files(directory):
    for root,dirs,files in os.walk(directory):
        print(f'files: {files}')
        print(f'dirs: {dirs}')
        for file in files:
           if file.endswith(".csv"):
               print('===========================================================================')
               f=open(file, 'r')
               #  perform calculation
               print(f.read(100))
               f.close()


# Press the green button in the gutter to run the script.
if __name__ == '__main__':
    print('sum of 5 is: ' + sum_to_n(5).__str__())
    path = os.path.abspath(os.path.join(os.getcwd(), os.pardir))+ '\\data'
    get_list_csv_files(path)
    

